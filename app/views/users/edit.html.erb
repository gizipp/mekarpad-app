<div style="max-width: 600px; margin: 50px auto; padding: 20px;">
  <h1 style="margin-bottom: 30px;">Edit Profile</h1>

  <% if @user.errors.any? %>
    <div style="background: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; padding: 15px; margin-bottom: 20px; border-radius: 4px;">
      <h3>Please fix the following errors:</h3>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>
    <div style="margin-bottom: 20px;">
      <%= f.label :name, "Name" %><br>
      <%= f.text_field :name, required: true, style: "width: 100%; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 4px;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= f.label :email, "Email Address" %><br>
      <%= f.email_field :email, required: true, style: "width: 100%; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 4px;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= f.label :bio, "Bio" %><br>
      <%= f.text_area :bio, rows: 6, style: "width: 100%; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 4px;" %>
      <small style="color: #666; font-size: 14px;">Tell us a bit about yourself</small>
    </div>

    <div style="margin-bottom: 15px;">
      <%= f.submit "Update Profile", style: "width: 100%; padding: 12px; font-size: 16px; background: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;" %>
    </div>
  <% end %>
</div>
